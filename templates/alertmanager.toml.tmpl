[template]
src = "alertmanager.yml.tmpl"
dest = "/etc/prometheus/alertmanager.yml"
prefix = "/<%= @project %>-%%PROJECT%%/%%ENVIRONMENT%%"

uid = 0
gid = 0
mode = "0640"

keys = [
    "/config/*",
    "/config"
]

reload_cmd = "/sbin/reload alertmanager || /sbin/restart alertmanager || /sbin/start alertmanager"
